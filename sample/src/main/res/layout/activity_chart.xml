<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.like.common.view.chart.horizontalScrollBarChartView.core.WrapHorizontalScrollBarChartView
            android:id="@+id/barView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/common_text_white_0" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="changeData1"
            android:text="改变数据1" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="changeData2"
            android:text="改变数据2" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="changeData3"
            android:text="清空数据" />
    </LinearLayout>

</layout>
