<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="selectedId"
            type="android.databinding.ObservableField&lt;String>" />

        <variable
            name="isChecked0"
            type="android.databinding.ObservableBoolean" />

        <variable
            name="isChecked1"
            type="android.databinding.ObservableBoolean" />

        <variable
            name="isChecked2"
            type="android.databinding.ObservableBoolean" />

        <variable
            name="isChecked3"
            type="android.databinding.ObservableBoolean" />

        <variable
            name="isChecked4"
            type="android.databinding.ObservableBoolean" />

        <variable
            name="isChecked5"
            type="android.databinding.ObservableBoolean" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/fl_toolbarContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/radio0"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@{selectedId.get().equals(String.valueOf(0))?@drawable/btn_press_shap:@drawable/btn_normal_shap}"
                android:gravity="center"
                android:text="单选0"
                android:textColor="@{selectedId.get().equals(String.valueOf(0))?@color/common_text_white_0:@color/common_text_black_1}"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/radio1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:background="@{selectedId.get().equals(String.valueOf(1))?@drawable/btn_press_shap:@drawable/btn_normal_shap}"
                android:gravity="center"
                android:text="单选1"
                android:textColor="@{selectedId.get().equals(String.valueOf(1))?@color/common_text_white_0:@color/common_text_black_1}"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/radio2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@{selectedId.get().equals(String.valueOf(2))?@drawable/btn_press_shap:@drawable/btn_normal_shap}"
                android:gravity="center"
                android:text="单选2"
                android:textColor="@{selectedId.get().equals(String.valueOf(2))?@color/common_text_white_0:@color/common_text_black_1}"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/radio3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@{selectedId.get().equals(String.valueOf(3))?@drawable/btn_press_shap:@drawable/btn_normal_shap}"
                android:gravity="center"
                android:text="单选3"
                android:textColor="@{selectedId.get().equals(String.valueOf(3))?@color/common_text_white_0:@color/common_text_black_1}"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/radio4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:background="@{selectedId.get().equals(String.valueOf(4))?@drawable/btn_press_shap:@drawable/btn_normal_shap}"
                android:gravity="center"
                android:text="单选4"
                android:textColor="@{selectedId.get().equals(String.valueOf(4))?@color/common_text_white_0:@color/common_text_black_1}"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/radio5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@{selectedId.get().equals(String.valueOf(5))?@drawable/btn_press_shap:@drawable/btn_normal_shap}"
                android:gravity="center"
                android:text="单选5"
                android:textColor="@{selectedId.get().equals(String.valueOf(5))?@color/common_text_white_0:@color/common_text_black_1}"
                android:textSize="16sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="@color/common_divider_gray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/check0"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@{isChecked0.get()?@drawable/btn_press_shap:@drawable/btn_normal_shap}"
                android:gravity="center"
                android:text="复选0"
                android:textColor="@{isChecked0.get()?@color/common_text_white_0:@color/common_text_black_1}"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/check1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:background="@{isChecked1.get()?@drawable/btn_press_shap:@drawable/btn_normal_shap}"
                android:gravity="center"
                android:text="复选1"
                android:textColor="@{isChecked1.get()?@color/common_text_white_0:@color/common_text_black_1}"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/check2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@{isChecked2.get()?@drawable/btn_press_shap:@drawable/btn_normal_shap}"
                android:gravity="center"
                android:text="复选2"
                android:textColor="@{isChecked2.get()?@color/common_text_white_0:@color/common_text_black_1}"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/check3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@{isChecked3.get()?@drawable/btn_press_shap:@drawable/btn_normal_shap}"
                android:gravity="center"
                android:text="复选3"
                android:textColor="@{isChecked3.get()?@color/common_text_white_0:@color/common_text_black_1}"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/check4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:background="@{isChecked4.get()?@drawable/btn_press_shap:@drawable/btn_normal_shap}"
                android:gravity="center"
                android:text="复选4"
                android:textColor="@{isChecked4.get()?@color/common_text_white_0:@color/common_text_black_1}"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/check5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@{isChecked5.get()?@drawable/btn_press_shap:@drawable/btn_normal_shap}"
                android:gravity="center"
                android:text="复选5"
                android:textColor="@{isChecked5.get()?@color/common_text_white_0:@color/common_text_black_1}"
                android:textSize="16sp" />
        </LinearLayout>

        <FrameLayout
            android:id="@+id/fl_bottom_tab_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
</layout>
