<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/common_text_white_0">

        <com.like.common.view.chart.horizontalScrollTwoLineChartView.core.WrapHorizontalScrollTwoLineChartView
            android:id="@+id/twoLineChartView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingRight="20dp"
            android:paddingTop="20dp">

            <View
                android:layout_width="20dp"
                android:layout_height="5dp"
                android:layout_marginRight="5dp"
                android:background="#ff9600" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text="同比"
                android:textColor="#606060"
                android:textSize="12sp" />

            <View
                android:layout_width="20dp"
                android:layout_height="5dp"
                android:layout_marginRight="5dp"
                android:background="#00a7ff" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="环比"
                android:textColor="#606060"
                android:textSize="12sp" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/twoLineChartView"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:text="单位：日"
            android:textColor="#606060"
            android:textSize="12sp" />
    </RelativeLayout>

</layout>
